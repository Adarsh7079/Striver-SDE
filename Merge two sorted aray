#include <bits/stdc++.h> 
vector<int> ninjaAndSortedArrays(vector<int>& arr1, vector<int>& arr2, int m, int n) {
	int s1=0,s2=0;
    vector<int>ans;
    while(s1<m&& s2<n)
    {
        if(arr1[s1]<=arr2[s2])
        {
            ans.push_back(arr1[s1]);
            s1++;
        }
        else
        {
            ans.push_back(arr2[s2++]);
        }
    }
    while(s1<m)
    {
        ans.push_back(arr1[s1++]);
    }
     while(s2<n)
    {
        ans.push_back(arr2[s2++]);
    }
    return ans;
}
